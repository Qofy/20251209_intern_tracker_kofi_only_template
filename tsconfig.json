{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "strict": false,
    "target": "esNext",
    "module": "esNext",
    "moduleResolution": "node",
    "types": ["vite/client", "vitest/globals", "@testing-library/jest-dom"],
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./__test__/*"]
    }
  },
  "include": [ "src/**/*", "__test__/**/*" ],
  "exclude": ["vendor","deps",".yarn","build","dist",".routify","node_modules", "public"]
}
