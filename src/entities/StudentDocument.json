{
  "name": "StudentDocument",
  "type": "object",
  "properties": {
    "student_email": {
      "type": "string",
      "description": "The email of the student this document belongs to."
    },
    "document_type": {
      "type": "string",
      "enum": [
        "id",
        "contract",
        "visa",
        "other"
      ],
      "description": "The type of the document."
    },
    "description": {
      "type": "string",
      "description": "A brief description of the document."
    },
    "file_url": {
      "type": "string",
      "description": "URL of the uploaded file."
    }
  },
  "required": [
    "student_email",
    "document_type",
    "file_url"
  ],
  "rls": {
    "read": {
      "$or": [
        {
          "student_email": "{{user.email}}"
        },
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "mentor"
          }
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    },
    "write": {
      "$or": [
        {
          "student_email": "{{user.email}}"
        },
        {
          "created_by": "{{user.email}}"
        },
        {
          "user_condition": {
            "role": "admin"
          }
        }
      ]
    }
  }
}
